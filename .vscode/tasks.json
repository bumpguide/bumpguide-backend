	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run uvicorn on startup",
			"type": "shell",
			"command": "uvicorn main:app --reload",
			"windows": {
				"command": "uvicorn main:app --reload",
			},
			"presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": { "runOn": "folderOpen" }
	  
		}
	]
}